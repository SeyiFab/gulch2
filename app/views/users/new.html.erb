<title>Sign Up</title>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
      <br> <!-- enters a blank line, ie: line break -->

      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
      <br> <!-- enters a blank line, ie: line break -->

      <%= f.label :email %>
      <%= f.text_field :email %>
      <br> <!-- enters a blank line, ie: line break -->

      <%= f.label :phone %>
      <%= f.text_field :phone %>
      <br> <!-- enters a blank line, ie: line break -->

      <%= f.label :company %>
      <%= f.text_field :company %>
      <br> <!-- enters a blank line, ie: line break -->

      <%= f.label :address %>
      <%= f.text_field :address %>
      <br> <!-- enters a blank line, ie: line break -->

      <%= f.label :city %>
      <%= f.text_field :city %>
      <br> <!-- enters a blank line, ie: line break -->

      <%= f.label :state %>
      <%= f.text_field :state %>
      <br> <!-- enters a blank line, ie: line break -->

      <%= f.label :zip %>
      <%= f.text_field :zip %>
      <br> <!-- enters a blank line, ie: line break -->

      <%= f.label :password %>
      <%= f.password_field :password %>
      <br> <!-- enters a blank line, ie: line break -->

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
      <br> <!-- enters a blank line, ie: line break -->

      <%= f.submit "Create my account", class: "btn btn-med btn-custom" %>
    <% end %>
  </div>
</div>